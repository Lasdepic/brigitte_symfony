{% extends 'base.html.twig' %}

{% block title %}Animal index
{% endblock %}

{% block body %}
	<h1>Animal index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Date_naissance</th>
				<th>Description</th>
				<th>Num_identification</th>
				<th>Sexe</th>
				<th>Date_arrivee</th>
				<th>Est_adoptable</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for animal in animals %}
				<tr>
					<td>{{ animal.id }}</td>
					<td>{{ animal.nom }}</td>
					<td>{{ animal.dateNaissance ? animal.dateNaissance|date('Y-m-d') : '' }}</td>
					<td>{{ animal.description }}</td>
					<td>{{ animal.numIdentification }}</td>
					<td>{{ animal.sexe.label() }}</td>
					<td>{{ animal.dateArrivee ? animal.dateArrivee|date('Y-m-d') : '' }}</td>
					<td>{{ animal.estAdoptable ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('app_animal_show', {'id': animal.id}) }}">show</a>
						<a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_animal_new') }}">Create new</a>
{% endblock %}
